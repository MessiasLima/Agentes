<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AgentesDaArea">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/fundo"
        android:padding="@dimen/place_autocomplete_button_padding">

        <TextView
            android:id="@+id/agentes_da_area_texto_explicativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_explicativo_agentes_da_area"
            android:textAlignment="center"
            android:textSize="@dimen/tamanho_texto_normal" />
    </LinearLayout>

    <fragment
        android:id="@+id/mapa"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_megafone" />
    </LinearLayout>
</LinearLayout>
